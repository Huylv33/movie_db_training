<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="@dimen/content_main_padding">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_genre_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_genre_height"
        app:cardBackgroundColor="#0A6FEF">

        <TextView
            android:id="@+id/text_genre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_textview_margin"
            android:textColor="@color/color_white"
            android:textSize="@dimen/genre_name_font_size" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
